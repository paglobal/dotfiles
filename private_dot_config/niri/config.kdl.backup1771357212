    match app-id=r#"^org\.gnome\."#
    draw-border-with-background false
    geometry-corner-radius 12
    clip-to-geometry true
}

// For dms
window-rule {
    match app-id="Alacritty"
    match app-id="kitty"
    draw-border-with-background false
}

// For dms
window-rule {
    match is-active=false
    opacity 0.9
}

// For dms: open windows as floating by default
window-rule {
    match app-id=r#"org.quickshell$"#
    open-floating true
}

binds {
    Mod+Shift+Slash { show-hotkey-overlay; }
    
    XF86AudioRaiseVolume        allow-when-locked=true { spawn-sh "dms ipc call audio increment 5"; }
    Ctrl+Alt+BracketRight       allow-when-locked=true { spawn-sh "dms ipc call audio increment 5"; }
    XF86AudioLowerVolume        allow-when-locked=true { spawn-sh "dms ipc call audio decrement 5"; }
    Ctrl+Alt+BracketLeft        allow-when-locked=true { spawn-sh "dms ipc call audio decrement 5"; }
    XF86AudioMute               allow-when-locked=true { spawn-sh "dms ipc call audio mute"; }
    XF86AudioMicMute            allow-when-locked=true { spawn-sh "dms ipc call audio micmute"; }
    XF86MonBrightnessUp         allow-when-locked=true { spawn-sh "dms ipc call brightness increment 5 \"\""; }
    XF86MonBrightnessDown       allow-when-locked=true { spawn-sh "dms ipc call brightness decrement 5 \"\""; }
    XF86AudioPlay               allow-when-locked=true { spawn-sh "dms ipc call mpris playPause"; }
    Ctrl+Alt+P                  allow-when-locked=true { spawn-sh "dms ipc call mpris playPause"; }
    Ctrl+Alt+Shift+BracketRight allow-when-locked=true { spawn-sh "dms ipc call mpris next"; }
    Ctrl+Alt+Shift+BracketLeft  allow-when-locked=true { spawn-sh "dms ipc call mpris previous"; }

    Mod+O repeat=false { toggle-overview; }

    Mod+Q  { close-window; }
    Alt+F4 { close-window; }

    Mod+H { focus-column-left; }
    Mod+J { focus-window-or-workspace-down; }
    Mod+K { focus-window-or-workspace-up; }
    Mod+L { focus-column-right; }

    Mod+Shift+H { move-column-left; }
    Mod+Shift+J { move-window-down-or-to-workspace-down; }
    Mod+Shift+K { move-window-up-or-to-workspace-up; }
    Mod+Shift+L { move-column-right; }

    Mod+Left  { focus-monitor-left; }
    Mod+Down  { focus-monitor-down; }
    Mod+Up    { focus-monitor-up; }
    Mod+Right { focus-monitor-right; }

    Mod+Shift+Left  { move-column-to-monitor-left; }
    Mod+Shift+Down  { move-column-to-monitor-down; }
    Mod+Shift+Up    { move-column-to-monitor-up; }
    Mod+Shift+Right { move-column-to-monitor-right; }

    Mod+Ctrl+Left  { move-workspace-to-monitor-left; }
    Mod+Ctrl+Down  { move-workspace-down; }
    Mod+Ctrl+Up    { move-workspace-up; }
    Mod+Ctrl+Right { move-workspace-to-monitor-right; }

    Mod+WheelScrollDown       cooldown-ms=150 { focus-workspace-down; }
    Mod+WheelScrollUp         cooldown-ms=150 { focus-workspace-up; }
    Mod+Shift+WheelScrollDown cooldown-ms=150 { move-column-to-workspace-down; }
    Mod+Shift+WheelScrollUp   cooldown-ms=150 { move-column-to-workspace-up; }

    Mod+WheelScrollRight       { focus-column-right; }
    Mod+WheelScrollLeft        { focus-column-left; }
    Mod+Shift+WheelScrollRight { move-column-right; }
    Mod+Shift+WheelScrollLeft  { move-column-left; }

    Mod+1 { focus-workspace 1; }
    Mod+2 { focus-workspace 2; }
    Mod+3 { focus-workspace 3; }
    Mod+4 { focus-workspace 4; }
    Mod+5 { focus-workspace 5; }
    Mod+6 { focus-workspace 6; }
    Mod+7 { focus-workspace 7; }
    Mod+8 { focus-workspace 8; }
    Mod+9 { focus-workspace 9; }

    Mod+Shift+1 { move-column-to-workspace 1; }
    Mod+Shift+2 { move-column-to-workspace 2; }
    Mod+Shift+3 { move-column-to-workspace 3; }
    Mod+Shift+4 { move-column-to-workspace 4; }
    Mod+Shift+5 { move-column-to-workspace 5; }
    Mod+Shift+6 { move-column-to-workspace 6; }
    Mod+Shift+7 { move-column-to-workspace 7; }
    Mod+Shift+8 { move-column-to-workspace 8; }
    Mod+Shift+9 { move-column-to-workspace 9; }

    Mod+BracketLeft  { consume-or-expel-window-left; }
    Mod+BracketRight { consume-or-expel-window-right; }

    Mod+X       { switch-preset-column-width; }
    Mod+Z       { switch-preset-window-height; }
    Mod+F       { toggle-windowed-fullscreen; }
    Mod+Shift+F { fullscreen-window; }

    Mod+Minus { set-column-width "-10%"; }
    Mod+Equal { set-column-width "+10%"; }

    Mod+Shift+Minus { set-window-height "-10%"; }
    Mod+Shift+Equal { set-window-height "+10%"; }

    Mod+Shift+Space { toggle-window-floating; }
    Mod+Space       { switch-focus-between-floating-and-tiling; }

    Mod+T { toggle-column-tabbed-display; }

    // Applications such as remote-desktop clients and software KVM switches may
    // request that niri stops processing the keyboard shortcuts defined here
    // so they may, for example, forward the key presses as-is to a remote machine.
    // It's a good idea to bind an escape hatch to toggle the inhibitor,
    // so a buggy application can't hold your session hostage.
    //
    // The allow-inhibiting=false property can be applied to other binds as well,
    // which ensures niri always processes them, even when an inhibitor is active.
    Mod+Escape allow-inhibiting=false { toggle-keyboard-shortcuts-inhibit; }

    Mod+Shift+Q     { quit; }
    Ctrl+Alt+Delete { quit; }

    Mod+B           hotkey-overlay-title="Open browser: chrome"             { spawn-sh "google-chrome-stable"; }
    Mod+Shift+B     hotkey-overlay-title="Toggle keybinds: niri & dms"      { spawn-sh "dms ipc call keybinds toggle niri"; }
    Mod+Y           hotkey-overlay-title="Open file manager: yazi"          { spawn-sh "kitty -e bash -ic yazi"; }
    Mod+W           hotkey-overlay-title="Toggle control center: dms"       { spawn-sh "dms ipc call control-center toggle"; }
    Mod+P           hotkey-overlay-title="Open color picker: dms"           { spawn-sh "dms color pick -a"; }
    Mod+Shift+P     hotkey-overlay-title="Toggle power menu: dms"           { spawn-sh "dms ipc call powermenu toggle"; }
    Alt+Space       hotkey-overlay-title="Toggle spotlight: dms"            { spawn-sh "dms ipc call spotlight toggle"; }
    Mod+Return      hotkey-overlay-title="Open a terminal: kitty"           { spawn-sh "kitty"; }
    Mod+S           hotkey-overlay-title="Toggle screen widgets: dms"       { spawn-sh "dms ipc call bar toggle index 0"; }
    Mod+Shift+S     hotkey-overlay-title="Toggle settings: dms"             { spawn-sh "dms ipc call settings toggle"; }
    Mod+C           hotkey-overlay-title="Open code editor: vscode"         { spawn-sh "code"; }
    Mod+E           hotkey-overlay-title="Open file manager: nautilus"      { spawn-sh "nautilus"; }
    Mod+Period      hotkey-overlay-title="Open emoji picker: emote"         { spawn-sh "emote"; }
    Mod+N           hotkey-overlay-title="Toggle notification center: dms"  { spawn-sh "dms ipc call notifications toggle"; }
    Mod+Shift+N     hotkey-overlay-title="Dismiss popup notifications: dms" { spawn-sh "dms ipc call notifications dismissAllPopups"; }
    Mod+D           hotkey-overlay-title="Toggle dash: dms"                 { spawn-sh "dms ipc call dash toggle media"; }
    Mod+V           hotkey-overlay-title="Toggle clipboard: dms"            { spawn-sh "dms ipc call clipboard toggle"; }
    Print           hotkey-overlay-title="Screenshot: niri & dms"           { spawn-sh "dms ipc call niri screenshot"; }
    Mod+Print       hotkey-overlay-title="Screenshot screen: niri & dms"    { spawn-sh "dms ipc call niri screenshotScreen";  }
    Mod+Shift+Print hotkey-overlay-title="Screenshot window: niri & dms"    { spawn-sh "dms ipc call niri screenshotWindow";  }
}

